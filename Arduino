#include <Zumo32U4.h>

#include <Wire.h>

 

Zumo32U4LCD lcd;

Zumo32U4Motors moto;

Zumo32U4ButtonB buttonB;

 

 

void setup () {


  lcd.print("press B");

  buttonB.waitForButton();

}

 

void loop() {

 

moto.setSpeeds(150,150);

lcd.clear();

lcd.print("forward");

delay(1250);

 

moto.setSpeeds(0,97);

lcd.clear();

lcd.print("turning left");

